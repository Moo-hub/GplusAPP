FROM node:20

# Install system packages needed for canvas
RUN apt-get update && apt-get install -y \
    build-essential \
    libcairo2-dev \
    libpango1.0-dev \
    libjpeg-dev \
    libgif-dev \
    librsvg2-dev \
    libfreetype6-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY frontend/package*.json ./
RUN npm ci --no-audit --no-fund

COPY frontend/ ./
CMD ["npm", "test"]
