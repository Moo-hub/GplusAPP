# =============================================================================
# G+ Recycling EcoSys - Backend Environment Variables
# =============================================================================
# نسخ هذا الملف إلى .env وتعديل القيم حسب البيئة المطلوبة
# Copy this file to .env and modify values according to your environment

# =============================================================================
# بيئة التطبيق | Application Environment
# =============================================================================
ENVIRONMENT=development
# القيم الممكنة: development, test, production
# Possible values: development, test, production

# =============================================================================
# قاعدة البيانات | Database Configuration
# =============================================================================
# للتطوير: SQLite (افتراضي)
# For development: SQLite (default)
SQLITE_PATH=./app.db

# للاختبار: قاعدة بيانات منفصلة
# For testing: separate database
TEST_SQLITE_PATH=./test.db

# للإنتاج: PostgreSQL
# For production: PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_PORT=5433
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=gplus_app

# =============================================================================
# الأمان | Security Configuration
# =============================================================================
# مفتاح سري قوي لـ JWT - يجب تغييره في الإنتاج
# Strong secret key for JWT - MUST be changed in production
SECRET_KEY=your-super-secret-key-change-this-in-production-123456789

# إعدادات JWT
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CSRF Protection
CSRF_TOKEN_EXPIRE_MINUTES=60

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=3600

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379

# إعدادات مراقبة Redis
REDIS_ALERTS_ENABLED=True
REDIS_MONITORING_INTERVAL_MINUTES=15
REDIS_MEMORY_WARNING_PERCENT=75.0
REDIS_MEMORY_CRITICAL_PERCENT=90.0

# إشعارات Redis (اختياري)
REDIS_ALERT_RECIPIENTS=admin@gplusapp.com,dev@gplusapp.com

# =============================================================================
# إعدادات البريد الإلكتروني | Email Configuration
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True

EMAILS_FROM_EMAIL=noreply@gplusapp.com
EMAILS_FROM_NAME=G+ App

# تفعيل التحقق من البريد الإلكتروني
REQUIRE_EMAIL_VERIFICATION=True

# =============================================================================
# إعدادات Slack للتنبيهات (اختياري) | Slack Alerts (Optional)
# =============================================================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts

# =============================================================================
# إعدادات الواجهة الأمامية | Frontend Configuration
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# إعدادات التطوير | Development Settings
# =============================================================================
DEBUG=True

# =============================================================================
# ملاحظات مهمة | Important Notes
# =============================================================================
# 1. لا تشارك ملف .env مع أي شخص أو في نظام التحكم بالإصدارات
#    Never share .env file with anyone or commit to version control
#
# 2. استخدم كلمات مرور قوية في الإنتاج
#    Use strong passwords in production
#
# 3. غير SECRET_KEY في كل بيئة
#    Change SECRET_KEY in every environment
#
# 4. تأكد من تشغيل Redis و PostgreSQL في الإنتاج
#    Ensure Redis and PostgreSQL are running in production
# =============================================================================
