name: Repository Dispatch Listener

on:
  repository_dispatch:
    types: [run-ci-for-branch]

permissions:
  contents: read
  actions: write

jobs:
  run-frontend-ci:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node 20
        uses: actions/setup-node@v4
        with:
          node-version: '20.x'

      - name: Install dependencies
        run: |
          npm ci

      - name: Run frontend CI (placeholder)
        run: |
          echo "Run your frontend CI tasks here (tests/build/lint)"
