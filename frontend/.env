# =============================================================================
# G+ Recycling EcoSys - Frontend Environment Variables
# =============================================================================
# نسخ هذا الملف إلى .env وتعديل القيم حسب البيئة المطلوبة
# Copy this file to .env and modify values according to your environment

# =============================================================================
# API Configuration
# =============================================================================
# عنوان API الخلفي - Backend API URL
# Backend API URL
VITE_API_URL=http://localhost:8000

# عنوان WebSocket (اختياري) - WebSocket URL (Optional)
# WebSocket URL for real-time features
VITE_WS_URL=ws://localhost:8000

# =============================================================================
# Application Configuration
# =============================================================================
# بيئة التطبيق - Application Environment
VITE_APP_ENVIRONMENT=development
# القيم الممكنة: development, staging, production

# إصدار التطبيق - Application Version
VITE_APP_VERSION=1.0.0

# =============================================================================
# PWA Configuration (اختياري)
# =============================================================================
# تفعيل PWA - Enable PWA
VITE_PWA_ENABLED=true

# اسم التطبيق في PWA - PWA App Name
VITE_PWA_NAME=G+ Recycling App

# وصف التطبيق - App Description
VITE_PWA_DESCRIPTION=G+ recycling and rewards application

# =============================================================================
# Analytics & Monitoring (اختياري)
# =============================================================================
# Sentry DSN للتتبع والمراقبة - Sentry DSN for tracking and monitoring
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Analytics ID (اختياري)
# VITE_GA_ID=GA-XXXXXXXXXX

# =============================================================================
# Feature Flags (اختياري)
# =============================================================================
# تفعيل ميزات تجريبية - Enable experimental features
VITE_ENABLE_EXPERIMENTAL=false

# تفعيل وضع عدم الاتصال - Enable offline mode
VITE_ENABLE_OFFLINE_MODE=true

# تفعيل الإشعارات - Enable notifications
VITE_ENABLE_NOTIFICATIONS=true

# =============================================================================
# Development Settings
# =============================================================================
# تفعيل وضع التطوير المفصل - Enable verbose development mode
VITE_DEV_VERBOSE=false

# =============================================================================
# ملاحظات مهمة | Important Notes
# =============================================================================
# 1. جميع المتغيرات التي تبدأ بـ VITE_ تكون متاحة في الكود
#    All variables starting with VITE_ are available in the code
#
# 2. تأكد من أن VITE_API_URL يشير للخادم الصحيح
#    Make sure VITE_API_URL points to the correct server
#
# 3. في الإنتاج، استخدم HTTPS للـ API
#    In production, use HTTPS for API
#
# 4. لا تضع معلومات حساسة هنا (استخدم VITE_ فقط للمعلومات العامة)
#    Don't put sensitive information here (use VITE_ only for public info)
# =============================================================================
