import { useState } from 'react'
import reactLogo from './assets/react.svg'
import viteLogo from '/vite.svg'
{% if component_features.FrontendReact.tailwind_css %}
import './App.css'
{% endif %}
{% if component_features.FrontendReact.react_router %}
import { BrowserRouter as Router, Routes, Route, Link } from 'react-router-dom';
{% endif %}
{% if component_features.FrontendReact.redux_store %}
import { useSelector, useDispatch } from 'react-redux';
import { increment, decrement } from './store/counterSlice.js';
{% endif %}


function App() {
  const [count, setCount] = useState(0)
  {% if component_features.FrontendReact.redux_store %}
  const counterValue = useSelector((state) => state.counter.value);
  const dispatch = useDispatch();
  {% endif %}

  return (
    {% if component_features.FrontendReact.react_router %}
    <Router>
      <nav className="p-4 bg-gray-800 text-white">
        <ul className="flex space-x-4">
          <li><Link to="/" className="hover:text-blue-400">Home</Link></li>
          <li><Link to="/about" className="hover:text-blue-400">About</Link></li>
        </ul>
      </nav>
      <Routes>
        <Route path="/" element={
    {% endif %}
          <div className="flex flex-col items-center justify-center min-h-screen {% if component_features.FrontendReact.tailwind_css %}bg-gray-100 text-gray-800{% else %}bg-blue-50 text-gray-800{% endif %} p-4">
            <div className="flex">
              <a href="https://vitejs.dev" target="_blank">
                <img src={viteLogo} className="logo" alt="Vite logo" />
              </a>
              <a href="https://react.dev" target="_blank">
                <img src={reactLogo} className="logo react" alt="React logo" />
              </a>
            </div>
            <h1 className="text-4xl font-bold mt-4 mb-8">Vite + React + {{ project.name }} Frontend</h1>

            <div className="card bg-white p-6 rounded-lg shadow-md mb-8">
              <p className="text-lg mb-4">
                Click the Vite and React logos to learn more.
              </p>
              <button
                className="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
                onClick={() => setCount((count) => count + 1)}
              >
                count is {count}
              </button>
              <p className="mt-4 text-gray-600">
                Edit <code>src/App.jsx</code> and save to test HMR
              </p>
            </div>
            <p className="read-the-docs text-sm text-gray-500">
              Click on the Vite and React logos to learn more
            </p>

            {% if component_features.FrontendReact.redux_store %}
            <div className="redux-example mt-8 bg-white p-6 rounded-lg shadow-md">
                <h2 className="text-2xl font-bold mb-4">Redux Example</h2>
                <p className="text-lg mb-4">Counter value from Redux: {counterValue}</p>
                <div className="flex space-x-4">
                    <button
                        className="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded"
                        onClick={() => dispatch(increment())}
                    >
                        Increment Redux
                    </button>
                    <button
                        className="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded"
                        onClick={() => dispatch(decrement())}
                    >
                        Decrement Redux
                    </button>
                </div>
            </div>
            {% endif %}

            {% if global_features.enable_analytics %}
            <div className="mt-8 text-sm text-gray-500">
                Analytics tracking enabled.
            </div>
            {% endif %}
          </div>
    {% if component_features.FrontendReact.react_router %}
        } />
        <Route path="/about" element={
          <div className="flex items-center justify-center min-h-screen bg-gray-50 p-4">
            <div className="bg-white p-8 rounded-lg shadow-md text-center">
              <h1 className="text-3xl font-bold text-green-600 mb-4">About This Project</h1>
              <p className="text-gray-700 mb-2">{{ project.description }}</p>
              <p className="text-gray-600">Version: {{ project.version }}</p>
              <p className="text-gray-600">Author: {{ project.author }}</p>
              <Link to="/" className="mt-4 inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Go to Home
              </Link>
            </div>
          </div>
        } />
      </Routes>
    </Router>
    {% endif %}
  )
}

export default App
